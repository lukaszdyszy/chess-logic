{
	"compilerOptions": {
		"allowSyntheticDefaultImports": true,
		"declaration": true,
		"esModuleInterop": true,
		"module": "es2015",
		"moduleResolution": "node",
		"noImplicitAny": true,
		"noUnusedLocals": false,
		"outDir": "dist/esm",
		"sourceMap": true,
		"strict": true,
		"target": "es6",
		"types": [
			"node",
			"jest"
		]
	},
	"include": [
		"src/**/*.ts"
	],
	"exclude": [
		"**/*.test.*"
	]
}